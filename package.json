{
  "name": "prispoint-vcs",
  "version": "1.0.0",
  "description": "Prispoint Version Control System",
  "author": {
    "name": "Lara",
    "email": "lara@example.com"
  },
  "homepage": "https://prispoint.com",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.prispoint.vcs",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "**/*",
      "dist/app"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "maintainer": "Lara <lara@example.com>",
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  }
}
